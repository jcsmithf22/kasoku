<%= turbo_stream_from Current.user %>

<div class="p-2 flex flex-col gap-2 sm:gap-6 sm:p-6">

  <div class="">
    <div class="h-24 w-full"></div>
    <h1 class="font-semibold text-3xl sticky top-0 py-4 text-center">Spaces</h1>
    <div class="h-24 w-full"></div>
  </div>

  <%= render "new", space: @space %>

  <ul class="max-w-md w-full flex flex-col gap-2" id="spaces">
    <%= render partial: "space", locals: { user: Current.user }, collection: @spaces %>
    <li class="no-spaces p-4 text-center">No spaces yet</li>
  </ul>
</div>
