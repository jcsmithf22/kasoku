<%= turbo_stream_from Current.user %>

<div class="p-2 flex flex-col gap-2 sm:p-6">

  <%= render "application/heading", title: "Spaces" %>

  <%= render "new", space: @space %>

  <ul class="w-full flex flex-col gap-2" id="spaces">
    <%= render partial: "space", locals: { user: Current.user }, collection: @spaces %>
    <li class="no-spaces p-4 text-center">No spaces yet</li>
  </ul>
</div>
