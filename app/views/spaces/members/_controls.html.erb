<div
  class="
    rounded-btn overflow-x-scroll overflow-y-hidden flex flex-nowrap gap-x-2
    space-controls
  "
>
  <%= link_to space_path(space.slug), class: "btn" do %>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
