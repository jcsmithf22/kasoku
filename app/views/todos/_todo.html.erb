<%# locals: (space:, todo:) -%>

<li id="<%= dom_id todo %>" class="todo bg-base-200 rounded-btn flex items-center justify-between">
  <span class="py-3 px-6 block">
    <%= todo.name %>
  </span>
  <%= button_to space_todo_path(space, todo), method: :delete, class: "btn btn-square btn-ghost" do %>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="lucide lucide-x"
    ><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
  <% end %>
</li>
